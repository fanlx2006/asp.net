@model Demo4.Models.Book
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    @*收集填写的信息并提交给相应的方法进行数据添加，因此要设计一个表单完成数据提交的工作*@
    @using (Html.BeginForm("Edit", "home", FormMethod.Post,new { enctype="multipart/form-data" }))
    {
    <table class="table table-bordered table-hover">
        <tr>
            <td>编号：</td>
            <td>
                @Html.DisplayFor(t => t.ID)
                @Html.HiddenFor(t => t.ID)
            </td>
        </tr>
        <tr>
            <td>标题：</td>
            <td>@Html.TextBoxFor(t => t.Title)</td>
        </tr>
        <tr>
            <td>照片：</td>
            <td><img id="author" src="~/images/@Model.Author" style="width:50px;height=50px" /></td>
        </tr>
        <tr>
            <td>价格：</td>
            <td>@Html.TextBoxFor(t => t.Price)</td>
        </tr>
        <tr>
            <td>选择文件：</td>
            <td><input type="file" name="myfile" /></td>
        </tr>
    </table>
        <input type="submit" value="OK" class="=btn btn-success" />
    } 
</body>
</html>
